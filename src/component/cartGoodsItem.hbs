<div class="col-12 my-3">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-2">
                    <img class="card-img-top py-2" src="{{image}}" alt="{{name}}">
                </div>
                <div class="col-4">
                    <h5>{{name}}</h5>
                    <div>{{description}}</div>
                </div>
                <div class="col-2 my-3">
                    {{#with price}}
                    <div class="py-2">{{title}}:</div>
                    <h6>{{value}}</h6>
                    {{/with}}
                </div>
                <div class="col-2 my-5">
                    <div>{{amount}}</div>
                </div>
                <div class="col-2 my-1">
                    {{#each buttons}}
                    {{#if isPrimary}}
                    <button class="btn btn-primary mt-3 mb-2">{{text}}</button>
                    {{/if}}
                    {{#if isDanger}}
                    <button class="btn btn-outline-danger">{{text}}</button>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>