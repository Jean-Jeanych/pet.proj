<div class="row">
    <div class="col-4 pt-3 pb-2 pe-0">
        <div>{{number}}</div>
        <div class="mt-3">{{status}}</div>
    </div>
    <div class="col-1 pt-3 pb-2 px-0">
        {{#with amount}}
        <div>{{title}}:</div>
        <div class="mt-3">{{value}}</div>
        {{/with}}
    </div>
    <div class="col-5 pe-0">
        <div class="row g-1">
            {{#each images}}
            <div class="col-4">
                <img src="{{this}}">
            </div>
            {{/each}}
        </div>
    </div>
    <div class="col-2 py-4 pe-0">
        {{#with button}}
        {{#if isPrimary}}
        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
        {{/if}}
        {{/with}}
    </div>
</div>
<div class="col-12">
    <hr class="mt-1">
</div>