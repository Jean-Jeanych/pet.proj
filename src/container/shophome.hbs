<main class="mx-1">
    <header>
        {{#with newsBlock}}

        <h1 class="mt-5 text-center mx-5">{{title}}</h1>

        <div class="row g-2 mt-4">
            {{#each cards}}
            <div class="col-3">
                <div class="card text-bg-dark">
                    <div class="card-header">
                        <div>{{title}}
                            {{#if isNew}}
                            <div class="badge text-bg-success rounded-pill text-capitalize">new</div>
                            {{/if}}
                            {{#if isTop}}
                            <div class="badge text-bg-danger rounded-pill text-capitalize">top</div>
                            {{/if}}
                        </div>
                    </div>
                    <div class="card-body">{{description}}</div>
                </div>
            </div>
            {{/each}}
        </div>

        {{/with}}

        <hr class="my-5">

    </header>

    <section>
        {{#with goodsBlock}}
        <div class=" nav nav-tabs mb-5">
            {{#each tabs}}
            <div class="nav-item">
                {{#if isActive}}
                <a href="#" class="nav-link active">{{text}}</a>
                {{else}}
                {{#if isDisabled}}
                <a href="#" class="nav-link disabled">{{text}}</a>
                {{else}}
                <a href="#" class="nav-link">{{text}}</a>
                {{/if}}
                {{/if}}
            </div>
            {{/each}}
        </div>


        <div class="row gx-2 gy-4">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src={{image}} alt={{title}}>
                    <div class="card-body">
                        <div class="card-title">{{title}}
                            {{#if isHot}}
                            <div class="badge text-bg-warning rounded-pill text-uppercase">hot!</div>
                            {{/if}}
                            {{#if isNew}}
                            <div class="badge text-bg-primary rounded-pill text-capitalize">new</div>
                            {{/if}}
                        </div>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}

        <hr class="my-5">

    </section>

    <section>
        {{#with subscribe}}
        <div class="alert text-bg-dark ps-1 pb-0">
            <h2>{{header}}</h2>
            <p class="my-3">{{description}}</p>
            {{#each buttons}}
            <div class="my-2">
                <a class="btn btn-primary" href={{link}}>{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
        <hr class="my-5">
    </section>

    <section>
        {{> service}}
        <hr class="my-5">
    </section>
</main>