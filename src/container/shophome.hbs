<main class="mx-1">
    <header>
        <div class="card mt-3 mb-5">
            {{#with navigation}}
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    <a href={{href}} class="nav-link">{{text}}</a>
                </div>
                {{/each}}
                <div class="link-item">
                    <a href="#" class="nav-link disabled">Disabled</a>
                </div>
            </div>
            {{/with}}
        </div>

        {{#with newsBlock}}

        <h1 class="mt-5 text-center mx-5">{{title}}</h1>

        <div class="row g-2 mt-4">
            {{#each cards}}
            <div class="col-3">
                <div class="card text-bg-dark">
                    <div class="card-header">
                        <div>{{title}}
                            {{#if isNew}}
                            <div class="badge text-bg-success rounded-pill text-capitalize">new</div>
                            {{/if}}
                            {{#if isTop}}
                            <div class="badge text-bg-danger rounded-pill text-capitalize">top</div>
                            {{/if}}
                        </div>
                    </div>
                    <div class="card-body">{{description}}</div>
                </div>
            </div>
            {{/each}}
        </div>

        {{/with}}

        <hr class="my-5">

    </header>

    <section>
        {{#with goodsBlock}}
        <div class=" nav nav-tabs mb-5">
            {{#each tabs}}
            <div class="nav-item">
                {{#if isActive}}
                <a href="#" class="nav-link active">{{text}}</a>
                {{else}}
                {{#if isDisabled}}
                <a href="#" class="nav-link disabled">{{text}}</a>
                {{else}}
                <a href="#" class="nav-link">{{text}}</a>
                {{/if}}
                {{/if}}
            </div>
            {{/each}}
        </div>


        <div class="row gx-2 gy-4">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src={{image}} alt={{title}}>
                    <div class="card-body">
                        <div class="card-title">{{title}}
                            {{#if isHot}}
                            <div class="badge text-bg-warning rounded-pill text-uppercase">hot!</div>
                            {{/if}}
                            {{#if isNew}}
                            <div class="badge text-bg-primary rounded-pill text-capitalize">new</div>
                            {{/if}}
                        </div>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}

        <hr class="my-5">

    </section>

    <section>
        {{#with subscribe}}
        <div class="alert text-bg-dark ps-1 pb-0">
            <h2>{{header}}</h2>
            <p class="my-3">{{description}}</p>
            {{#each buttons}}
            <div class="my-2">
                <a class="btn btn-primary" href={{link}}>{{text}}</a>
            </div>
            {{/each}}
        </div>
        {{/with}}
        <hr class="my-5">
    </section>

    <section>
        {{#with service}}
        <div class="alert text-center text-bg-success pb-2">
            <h2>{{title}}</h2>
            <p class="my-3">{{description}}</p>
            {{#each buttons}}
            <a class="btn btn-primary" href={{link}}>{{text}}</a>
            {{/each}}
        </div>
        {{/with}}
        <hr class="my-5">
    </section>

    <footer>
        <div class="row gx-5">
            <div class="col-2">
                <ul class="nav flex-column">
                    {{#each footer.[0]}}
                    <li class="nav-item">
                        <a class="nav-link" href={{link}}>{{text}}</a>
                    </li>
                    {{/each}}
                    <li class="nav-item">
                        <a class="nav-link disabled" href='#'>Disabled</a>
                    </li>
                </ul>
            </div>
            <div class="col-2">
                <ul class="nav flex-column">
                    {{#each footer.[1]}}
                    <li class="nav-item">
                        <a class="nav-link" href={{link}}>{{text}}</a>
                    </li>
                    {{/each}}
                    <li class="nav-item">
                        <a class="nav-link disabled" href='#'>Disabled</a>
                    </li>
                </ul>
            </div>
            <div class="col-2">
                <ul class="nav flex-column">
                    {{#each footer.[2]}}
                    <li class="nav-item">
                        <a class="nav-link" href={{link}}>{{text}}</a>
                    </li>
                    {{/each}}
                    <li class="nav-item">
                        <a class="nav-link disabled" href='#'>Disabled</a>
                    </li>
                </ul>
            </div>

            <div class="col-2">
                <ul class="nav flex-column">
                    {{#each footer.[3]}}
                    <li class="nav-item">
                        <a class="nav-link" href={{link}}>{{text}}</a>
                    </li>
                    {{/each}}
                    <li class="nav-item">
                        <a class="nav-link disabled" href='#'>Disabled</a>
                    </li>
                </ul>
            </div>
            <div class="col-2">
                <ul class="nav flex-column">
                    {{#each footer.[4]}}
                    <li class="nav-item">
                        <a class="nav-link" href={{link}}>{{text}}</a>
                    </li>
                    {{/each}}
                    <li class="nav-item">
                        <a class="nav-link disabled" href='#'>Disabled</a>
                    </li>
                </ul>
            </div>
    </footer>

</main>